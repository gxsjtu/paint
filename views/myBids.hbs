{{#extend "stylesheets"}}
<link rel="stylesheet" href="/javascripts/webPullToRefresh/lib/genericons/genericons.css">
<link rel='stylesheet' href="/javascripts/webPullToRefresh/base.css" />
<style>
#content{
  z-index: 20;
  position: relative;
}
.bidContainer{
  margin:0 10px;
  padding-top:20px;
  background:white;
}
.userInfo{
  display: flex;
}

.user{
  margin-left:15px;
  height: 50px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.nick{
  color:#2ad0cc;
}

.date{
  color:#919191;
}

.prices{
  display: flex;
  margin-top:15px;
  justify-content: center;
  color: white;
}

.priceLabel{
  background-repeat: no-repeat;
  height:25px;
  width:30vw;
  background-size:30vw 25px;
  display:flex;
  align-items:center;
  justify-content: center;
}

.high{
  background-image: url(/images/标签_07.png);
}

.my{
  background-image: url(/images/标签_48.png);
}

.low{
  background-image: url(/images/标签_24.png);
}
.main{
  margin: 10px;
}
.draw{
  width:50vw;
  margin:0 auto;
}
.draw img{
  width:100%;
}
.name{
  text-align: center;;
}
.menu{
  height:40px;
  width: 100vw;
  border-top:1px solid #f2f2f2;
  display: flex;
}
.splitItem {
    width: 100%;
    height: 5px;
    background: #f2f2f2;
}
.like,.bid{
  display: flex;
  width:50vw;
  justify-content: center;
  align-items: center;
  margin-top:8px;
  margin-bottom: 8px;
}
.bid{
  border-left:1px solid #f2f2f2;
}

</style>
{{/extend}}

<div id="ptr">
  <span class="genericon genericon-next"></span>
  <div class="loading">
    <span id="l1"></span>
    <span id="l2"></span>
    <span id="l3"></span>
  </div>
</div>
<div id="content">
  {{#each bids}}
  <div class="bidContainer">
    <div class="userInfo">
      <div class="avatar">
        <img src="{{this.avatar}}" style="width:50px;border-radius:50%;">
      </div>
      <div class="user">
        <div class="nick">
          {{this.nick}}
        </div>
        <div class="date">
          {{this.create_at}}
        </div>
      </div>
    </div>

    <div class="prices">
      <div class="low priceLabel">
        <div>
          底价:￥{{this.price}}
        </div>
      </div>
      <div class="my priceLabel">
        <div>我:￥{{this.myMaxPrice}}</div>
      </div>
      <div class="high priceLabel">
        <div>最高:￥{{this.maxPrice}}</div>
      </div>
    </div>
    <div class="main">
      <div class="name">
        《{{this.name}}》
      </div>
      <div class="draw">
        <img src="https://painting.shtx.com.cn/images/upload/{{this.img}}" />
      </div>
    </div>
  </div>

  <div class="menu">
    {{#if like.canLike}}
      <div class="like canLike" data-itemid="{{this._id}}">
        <img src="/images/aa_08.png" style="width:20px;"/>
        <div style="margin-left:10px;">{{this.likes.length}}</div>
      </div>
    {{else}}
      <div class="like">
        <img src="/images/BB_08.png" style="width:20px;"/>
        <div style="margin-left:10px;">{{this.likes.length}}</div>
      </div>
    {{/if}}
    <div class="bid">
      <img src="/images/aa_07.png" style="width:20px;"/>
      <div style="margin-left:10px;">{{this.bids.length}}</div>
    </div>
  </div>
  <div class="splitItem">

  </div>
  {{/each}}
</div>


{{#extend "scripts"}}
<script src="/javascripts/webPullToRefresh/lib/hammer.2.0.4.js"></script>
<script src="/javascripts/webPullToRefresh/lib/wptr.1.1.js"></script>
<script>
var openId='{{openId}}';
var loadNews = function(){
  return new Promise(function(resolve,reject){
    if (true) {
      window.location.reload();
      resolve();
    }else {
      reject();
    }
  });
};

$(function(){
  WebPullToRefresh.init( {
      loadingFunction: loadNews
  } );
  $(".canLike").on("click",function(){
    $(this).removeClass("canLike");
    $(this).off("click");
    $(this).find("img").attr("src","/images/BB_08.png");
    var number = $(this).find("div");
    var count = parseInt(number.text())+1;
    number.text(count);
    var itemId = $(this).data("itemid");
    $.get('/item/like/' + itemId+"?openId="+openId, function(data) {

    });
  });
});
</script>
{{/extend}}
