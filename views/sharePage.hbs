{{#extend "stylesheets"}}
<link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
{{/extend}}
<div class="content" style="padding-right:5px;padding-left:5px;">
    {{#each items}}
    <div class="row" style="margin-left:0px;margin-right:0px;margin-top:10px;">
      <div style="display:flex;flex-direction:row;align-items:center;justify-content:center;width:100%;font-size:18px;">
        《{{this.name}}》
      </div>
    {{#each this.images}}
      <div style="margin-top:3px;margin-bottom:3px;">
        <img src="https://painting.shtx.com.cn/images/upload/{{this}}" style="width:100%;"/>
      </div>
    {{/each}}
      {{this.comment}}
    </div>
    {{/each}}
</div>
