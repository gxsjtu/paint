{{#extend "stylesheets"}}
<link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/web-pull-to-refresh-master/lib/genericons/genericons.css">
<link rel='stylesheet' href="/swiper/dist/css/swiper.min.css" />
<link rel='stylesheet' href="/web-pull-to-refresh-master/base.css" />
<style>
   body {
       background: #fff;
       font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
       font-size: 14px;
       color:#000;
       margin: 0;
       padding: 0;
   }
   .swiper-container {
       width: 100%;
   }
   .swiper-slide{
     width: 100%;
   }
   .swiper-slide img{
       width: 100%;
       height: 50%;
   }
   .search{
     position: absolute;
     width: 70%;
     left: 15%;
     top: 10px;
     height: 30px;
     border-radius: 30px;
     background: rgba(255, 255, 255, 0.3);
     text-align: center;
     font-size: 18px;
     z-index: 99;
     overflow: hidden;
   }
   .search div{
     width: 100%;
     height: 30px;
     line-height: 30px;
     color: white;
     z-index: 100;
   }
   .menu{
     display: flex;
     flex-direction: row;
     flex-wrap: wrap;
     justify-content:space-between;
     padding-left: 20px;
     padding-right: 20px;
   }
   .menu .item{
     width: 20%;
     /*height: 100px;*/
     text-align: center;
     padding-top: 20px;
     padding-bottom: 20px;
   }
   .menu .item img{
     width: 60%;
   }
   .menu .item .name{
     text-align: center;
     margin-top: 2px;
     font-family: 黑体;
     font-size: 13px;
   }
   .split{
     width: 100%;
     height: 12px;
     background: #f2f2f2;
   }
   #content{
     z-index: 20;
     position: relative;
   }
   .header{
     display: flex;
   }
   </style>
{{/extend}}

<div id="ptr">
  <span class="genericon genericon-next"></span>
  <div class="loading">
    <span id="l1"></span>
    <span id="l2"></span>
    <span id="l3"></span>
  </div>
</div>
<div id="content">

  {{#if headers}}
  <div class="swiper-container">
      <div class="swiper-wrapper">
        {{#each headers}}
          <div class="swiper-slide">
            <img src="{{this}}" alt="">
          </div>
        {{/each}}
      </div>
      <div class="swiper-pagination"></div>
      <div class="search">
        <div><span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;搜索</div>
      </div>
  </div>
  {{/if}}
  <div style="margin-left:15px;margin-top:10px;">
    <img src="/images/画种.png" alt="画种" style="width:8%;" />
  </div>
  <div class="menu">
    <div class="item">
      <img src="/images/油画.png" alt="油画" />
      <div class="name">油画</div>
    </div>
    <div class="item">
      <img src="/images/国画.png" alt="国画" />
      <div class="name">国画</div>
    </div>
    <div class="item">
      <img src="/images/水彩.png" alt="水彩" />
      <div class="name">水彩</div>
    </div>
    <div class="item">
      <img src="/images/彩铅.png" alt="彩铅" />
      <div class="name">彩铅</div>
    </div>
  </div>
  <div class="split">
  </div>
  <div>
    <img src="/images/今日最新.png" alt="今日最新" style="width:16%;margin-left:15px;margin-top:10px;" /><div style="float:right;margin-right:15px;margin-top:10px;color:#919191;font-size:12px;">更多<span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span></div>
  </div>
</div>


{{#extend "scripts"}}
<script type="text/javascript" src="/swiper/dist/js/swiper.min.js"></script>
<script src="/web-pull-to-refresh-master/lib/hammer.2.0.4.js"></script>
<script src="/web-pull-to-refresh-master/lib/wptr.1.1.js"></script>
<script>
var loadToday = function(){
  return new Promise(function(resolve,reject){
    if (true) {
       resolve();
    }else {
      reject();
    }
  });
};

$(function(){
  var swiper = new Swiper('.swiper-container', {
     autoplay : 2000,
     loop:true,
     pagination: '.swiper-pagination',
     paginationClickable: true
  });

  WebPullToRefresh.init( {
      loadingFunction: loadToday
  } );
});


 </script>
