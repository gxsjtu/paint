{{#extend "stylesheets"}}
<link rel='stylesheet' href="/swiper/dist/css/swiper.min.css" />
<style>
   body {
       background: #fff;
       font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
       font-size: 14px;
       color:#000;
       margin: 0;
       padding: 0;
   }
   .swiper-container {
       width: 100%;
   }
   .swiper-slide{
     width: 100%;
   }
   .swiper-slide img{
       width: 100%;
       height: 50%;
   }
   </style>
{{/extend}}
