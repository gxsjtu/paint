{{#extend "stylesheets"}}
<link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/javascripts/web-pull-to-refresh-master/lib/genericons/genericons.css">
<link rel='stylesheet' href="/swiper/dist/css/swiper.min.css" />
<link rel='stylesheet' href="/javascripts/web-pull-to-refresh-master/base.css" />
<link rel='stylesheet' href="/stylesheets/index.css" />
{{/extend}}

<div id="ptr">
  <span class="genericon genericon-next"></span>
  <div class="loading">
    <span id="l1"></span>
    <span id="l2"></span>
    <span id="l3"></span>
  </div>
</div>
<div id="content">

  {{#if headers}}
  <div class="swiper-container">
      <div class="swiper-wrapper">
        {{#each headers}}
          <div class="swiper-slide">
            <img src="{{this}}" alt="">
          </div>
        {{/each}}
      </div>
      <div class="swiper-pagination"></div>
      <div class="search">
        <div><span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;搜索</div>
      </div>
  </div>
  {{/if}}
  <div>
    <img src="/images/画种.png" alt="画种" style="width:8%;margin-left:15px;margin-top:10px;" /><div style="float:right;margin-right:15px;margin-top:10px;color:#919191;font-size:12px;">更多<span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span></div>
  </div>
  <div class="menu">
    <div class="item">
      <img src="/images/油画.png" alt="油画" />
      <div class="name">油画</div>
    </div>
    <div class="item">
      <img src="/images/国画.png" alt="国画" />
      <div class="name">国画</div>
    </div>
    <div class="item">
      <img src="/images/水彩.png" alt="水彩" />
      <div class="name">水彩</div>
    </div>
    <div class="item">
      <img src="/images/彩铅.png" alt="彩铅" />
      <div class="name">彩铅</div>
    </div>
  </div>
  <div class="split">
  </div>
  <div>
    <img src="/images/今日最新.png" alt="今日最新" style="width:16%;margin-left:15px;margin-top:10px;" /><div style="float:right;margin-right:15px;margin-top:10px;color:#919191;font-size:12px;">更多<span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span></div>
    <ul class="list-group" style="margin-top:10px;border-top:1px solid #ddd;background:#f2f2f2;">
      {{#each today}}
      <li class="list-group-item item" onClick="gotoItem('{{this._id}}')" >
        <div class="row" style="margin-left:-15px;margin-right:0px;">
            <div class="avatarStyle">
              <img src="{{this.avatar}}" style="width:50px;border-radius:50px;"/>
            </div>
            <div class="nickDiv">
              <div class="row" style="margin-left:0px;margin-right:0px;">
                <span style="color:#2ad0cc">{{this.nick}}</span>
              </div>
              <div class="row" style="margin-top:5px;margin-left:0px;margin-right:0px;">
                <span style="color:#919191">{{this.create_at}}</span>
              </div>
            </div>
        </div>
        <div class="row" style="margin-left:0px;margin-right:0px;margin-top:10px;">
        <div class="row">
          {{#each this.images}}
          <div class="imgStyle" style="background:url(https://painting.shtx.com.cn/images/upload/{{this}});">

          </div>
          {{/each}}
        </div>
          <div class="row" style="margin-bottom:10px;font-size:14px;margin-top:10px;">
            <div class="col-xs-12" style="padding-right: 0px;padding-left: 3px;">
                《{{this.name}}》
            </div>
          </div>
        </div>
      </li>
      <div class="row option">
          <div class="col-xs-6 like" {{#if this.canLike }} onclick="heartClick('{{this._id}}')" {{/if}}>
              {{#if this.canLike}}
                <img id="imgLike" src="/images/aa_08.png" alt="赞" class="img-size"/>
              {{/if}}
              {{#unless this.canLike}}
                <img id="imgLike" src="/images/BB_08.png" alt="赞" class="img-size"/>
              {{/unless}}
              <span style="margin-left:10px;" id="{{this._id}}">{{this.likes.length}}</span>
          </div>
          <div class="col-xs-6 bid">
              <img src="/images/aa_07.png" alt="出价次数" class="img-size"/>

              <span style="margin-left:10px;">{{this.bids.length}}</span>
          </div>
      </div>
      <div class="splitItem">
      </div>
      {{/each}}
    </ul>
  </div>
</div>


{{#extend "scripts"}}
<script type="text/javascript" src="/swiper/dist/js/swiper.min.js"></script>
<script src="/javascripts/web-pull-to-refresh-master/lib/hammer.2.0.4.js"></script>
<script src="/javascripts/web-pull-to-refresh-master/lib/wptr.1.1.js"></script>
<script>
var loadToday = function(){
  return new Promise(function(resolve,reject){
    if (true) {
      window.location.reload();
      resolve();
    }else {
      reject();
    }
  });
};

function gotoItem(id){
  window.location.href = '/item/'+id;
}

function heartClick(id){
  var ele = $("#" + id);
  var pEle = ele.parent();
  pEle.removeAttr("onClick");
  var firstEle = pEle.children("img[id='imgLike']");
  if(firstEle){
    firstEle.attr("src", "/images/BB_08.png");
  }
  var like = ele.text();
  var res = parseInt(like) + 1;
  ele.text(res);
  $.get('/item/like/' + id, function(data) {

  });
}

$(function(){
  var swiper = new Swiper('.swiper-container', {
     autoplay : 2000,
     autoplayDisableOnInteraction:false,
     loop:true,
     pagination: '.swiper-pagination',
     paginationClickable: true
  });

  WebPullToRefresh.init( {
      loadingFunction: loadToday
  } );

  $(".search").on("click",function(){
    window.location.href="/search";
  })
});


 </script>
